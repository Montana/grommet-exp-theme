{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "target": "es6",
    "module": "ESNext",
    "rootDir": ".",
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noEmitHelpers": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["*.ts"],
  "exclude": ["node_modules", "dist"]
}
